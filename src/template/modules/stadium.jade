.container
	.row
		section.stadium-title.animated
			h1.title Nuestros
				span  locales
			.control
				button(class="all-stadium" href="#") Ver todas
				button(class="owl-prev" style="")
					i(class="fa fa-chevron-left" aria-hidden="true")
				button(class="owl-next" style="")
					i(class="fa fa-chevron-right" aria-hidden="true")
		#owl-team.owl-carousel.animated
			- for (var i = 1 ; i <= 6 ; i++)
				article.article-team
					a(href='campo-1.html')
						figure.block.block-img
							img(class="img-responsive" src="images/stadium/campo_#{i}.jpg")
						aside.block.block-text
							.content-text
								h3 Campo
									span  Lloque Yupanqui #{i}
								h6 Los Olivos
								p Experto en seguridad ciudadana, ex ministro del Interior y consultor de Naciones Unidas.