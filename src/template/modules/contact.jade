.container
	.row
		.col-md-7.contact-block.animated
			.contact-title
				h2.title-block
					i(class="fa fa-caret-right" aria-hidden="true")
					| Formulario de contacto
			.contact-text
				form(class="form")
					.form-box.col-xs-6
						label(for="name") Nombre
						input(type="text" class="form-control" id="name" placeholder="Nombre")
					.form-box.col-xs-6
						label(for="lastname") Apellido
						input(type="text" class="form-control" id="lastname" placeholder="Apellido")
					.form-box.col-xs-6
						label(for="email") Email
						input(type="text" class="form-control" id="email" placeholder="Email")
					.form-box.col-xs-6
						label(for="phone") Teléfono
						input(type="text" class="form-control" id="phone" placeholder="Teléfono")
					.form-box
						label(for="issue") Asunto
						input(type="text" class="form-control" id="issue" placeholder="Asunto")
					.form-box
						label(for="message") Mensaje
						textarea(type="textarea" class="form-control" id="message" placeholder="Mensaje...")
					
					.form-box.btn-box
						.btn-submit
							button(type="submit" class="btn btn-red") Enviar
