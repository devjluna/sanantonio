.header-nav
	position absolute
	width 100%
	top 0
	z-index 20
	.navbar
		&-full
			padding-right 0
			padding-left 0
		&-header
			float none
			height auto
			width 100%
			text-align center
		&-brand
			display inline-block
			float none
			height auto
			img
				max-width 150px
		&-nav
			border 1px solid white
			float none
			display -webkit-box
			li
				a
					color white
					text-transform uppercase
					transition all .3s
					font-family OpenCond
					font-size 1.3em
					&:hover,
					&:focus,
					&:active
						background-color rgba($red,.5)
						color white
						transition all .3s
		&-content
			display inline-block
			background-color rgba(0,0,0,.6)
			padding 10px
		&-collapse
			width 100%
			text-align center
			padding 0
			&.navbar
				&-full
					position fixed
					top 0
					.navbar
						&-nav
							border 0
							display inline-block
							margin-bottom -5px
						&-content
							padding 0
							width 100%