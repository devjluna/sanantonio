@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700,600,300|Open+Sans+Condensed:300,700&subset=latin,latin-ext')

Open = 'Open Sans', sans-serif
OpenCond = 'Open Sans Condensed', sans-serif

@font-face
	font-family 'acacias'
	src url('../fonts/acacias.eot?dh4aky')
	src url('../fonts/acacias.eot?dh4aky#iefix') format('embedded-opentype'),
			url('../fonts/acacias.ttf?dh4aky') format('truetype'),
			url('../fonts/acacias.woff?dh4aky') format('woff'),
			url('../fonts/acacias.svg?dh4aky#acacias') format('svg')
	font-weight normal
	font-style normal

[class^="ico-"],
[class*=" ico-"]
	font-family 'acacias' !important
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1

	/* Better Font Rendering =========== */
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.ico
	&-logo-lima:before 
		content "\e900"
	&-football-field:before
		content "\e901"
